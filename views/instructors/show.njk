{% extends "layout.njk" %}

{% block content%}
    <div class="card">
        <section class="avatar" style="background: url({{instructor.avatar}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Details</h3>
            <div class="item">
                <div>Instructor</div>
                <div>{{instructor.name}}</div>
            </div>
            <div class="item">
                <div>Age :</div>
                <div>{{instructor.age}}</div>
            </div>
            <div class="item">
                <div>Sex</div>
                <div>{{"Man"if instructor.gender =="M" else "Woman" }}</div>
            </div>
            <div class="item">
                <div>Specializations</div>
             {% for service in instructor.services %}
                <div>
                <span>{{service}}</span>
                </div>
                {% endfor %}
                <div class="item">
                <div>Registration since</div>
                <div>{{instructor.created_at}}</div>
            </div>
            </div>
            <a href="/instructors/{{instructor.id}}/edit"class="btn">Edit</a>
        </section>
    </div>

{% endblock content %}