{% extends "layout.njk" %}

{% block content%}
    <div class="card table-container">
    <a href="/instructors/create">New Instructor</a>
        <table width="100%">
            <thead>
                <tr>
                <th>Instructor</th>
                <th>Attendence</th>
                <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for instructor in instructors %}
            <tr>
            <td><span style="background-image:url({{instructor.avatar}})"></span>
            {{instructor.name}}</td>
            <td>{{instructor.services}}</td>
            <td><a href="/instructors/{{instructor.id}}">See Profile</a></td>
            </tr>
            {% endfor%}
            </tbody>
        </table>
    </div>

{% endblock content %}