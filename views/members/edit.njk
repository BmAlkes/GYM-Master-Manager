{% extends "layout.njk" %}

{% block content%}
    <div class="card">
        <section class="avatar" style="background: url({{member.avatar}}) no-repeat center center / cover"></section>
        <section class="details">

            <form action="/members?_method=PUT"method="POST">
                <h3>Edit Member</h3>

                {% include 'members/filds.njk' %}

                <input type="hidden" name="id" value={{member.id}}>

            </form>

            <form action="/members?_method=DELETE" method="POST">
                <input type="hidden" name="id" value={{member.id}}>
                <button class="delete" type="submit">Delete</button>
            </form>
       </section>     
    </div>
 
{% endblock content %}