{% extends "layout.njk" %}

{% block content%}
    <div class="card">
        <section class="avatar" style="background: url({{member.avatar}}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Details</h3>
            <div class="item">
                <div>Member</div>
                <div>{{member.name}}</div>
            </div>
            <div class="item">
                <div>Birth:</div>
                <div>{{member.birth}}</div>
            </div>
            <div class="item">
                <div>Email:</div>
                <div>{{member.email}}</div>
            </div>
            <div class="item">
                <div>Sex</div>
                <div>{{"Man"if member.gender =="M" else "Woman" }}</div>
            </div>
            <div class="item">
                <div>Blood Type</div>
                <div>{{member.blood}}</div>
            </div>
              <div class="item">
                <div>Weight</div>
                <div>{{member.weight}} Kg</div>
            <div class="item">
                <div>Registration since</div>
                <div>{{member.created_at}}</div>
            </div>
        </div>
        <a href="/members/{{member.id}}/edit" class="btn">Edit</a>
    </section>
</div>

{% endblock content %}